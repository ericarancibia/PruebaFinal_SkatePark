<div class="py-5">
    <h2>REGISTRO</h2>
    <hr class="w-50 m-auto" />

    <form id="registerForm">
        <div class="form-group row w-50 m-auto mt-4">
            <div class="form-group col-12 col-sm-6">
                <label>Email</label>
                <input id="email" type="email" class="form-control m-auto" name="email" />
            </div>
            <div class="form-group col-12 col-sm-6">
                <label>Nombre</label>
                <input id="nombre" class="form-control m-auto" name="nombre" />
            </div>
            <div class="form-group col-12 col-sm-6">
                <label>Password</label>
                <input id="password" class="form-control m-auto" name="password" />
            </div>
            <div class="form-group col-12 col-sm-6">
                <label>Repita el password</label>
                <input id="password_repetida" class="form-control m-auto" name="password_repetida" />
            </div>
            <div class="form-group col-12 col-sm-6">
                <label>Años de experiencia</label>
                <input id="experiencia" class="form-control m-auto" name="anos_experiencia" />
            </div>
            <div class="form-group col-12 col-sm-6">
                <label>Especialidad</label>
                <input id="especialidad" class="form-control m-auto" name="especialidad" />
            </div>
            <div class="form-group col-12 col-sm-12 mt-3">
                <label>Foto de Perfil:</label>
                <input id="foto" type="file" name="foto" />
            </div>
        </div>
        <button type="submit" class="btn btn-info mb-3 mt-3">Registrarme</button>
        <p><a href="/login"> Iniciar sesión</a></p>
    </form>
</div>

